@model IEnumerable<MyWebSite.Models.Article>

@{
    ViewData["Title"] = "My Article";
    ViewData["Banner"] = "Thoughts";
}
<partial name="_Banner" />
<div class="main">
    <div class="row justify-content-md-center">
        <div class="col-9">
            <div class="p-4 text-black bg-light fs-5 lh-base mb-5 text-black-50">
                Every 60 seconds, a minute passes in Africa. Every 0.1 seconds, a new question is posted on StackOverflow. Every 1 second, each new question by me is being dogpiled and vote-bombed due to 'Being a duplicate', or 'Not enough information'. I quickly learnt after the first year to stop asking questions and just google them first. Hire me. I have experience developing not just DotNet, but also .Com and .Org!
            </div>
        </div>
        <div class="row item justify-content-md-center mb-5 lh-base">
            @foreach (var item in Model)
            {
                <div class="col-9 mb-4">
                    <h2 class="display-7">
                        <a asp-action="Details" asp-route-id="@item?.Id">
                            @Html.DisplayFor(modelItem => item.Title)
                        </a>
                    </h2>
                    <div class="fs-5 lh-base"> @Html.Raw(Markdig.Markdown.ToHtml(item.Body))</div>
                </div>


            }
        </div>
    </div>
</div>


